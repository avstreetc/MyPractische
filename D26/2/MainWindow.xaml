<Window x:Class="LibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library" Height="349" Width="678">
    <Grid>
        <ListBox Name="voksalsList" Grid.ColumnSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Path=Point}" FontWeight="Bold" />
                        <TextBlock Text="{Binding Path=Nummer}" />
                        <TextBlock Text="{Binding Path=PointOf}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
